{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@mobile/*": [
                "mobile/*"
            ],
            "@css/*": [
                "css/*"
            ],
            "@components/*": [
                "components/*"
            ],
        }
    },
    "include": [
        "src/**/*",
        "mobile/**/*",
        "css/**/*",
        "components/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}
